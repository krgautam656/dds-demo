                    <h3 class="card-title">Users List</h3>
                    <div class="table-responsive">
                      <table class="table table-hover" id="detailsTable">
                        <thead>
                          <tr>
                            <th>Sl. No.</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Email Id</th>
                            <th>Phone Number</th>
